---
import GitHubIcon from './icons/GitHubIcon.astro'
import MediumIcon from './icons/MediumIcon.astro'
import YouTubeIcon from './icons/YouTubeIcon.astro'
import LinkedInIcon from './icons/LinkedInIcon.astro'
import InstagramIcon from './icons/InstagramIcon.astro'

import { links } from '../data/socials.json'
---

<div class="flex items-center gap-8">
  {
    links.map(
      button => (
        <a
          href={button.url}
          target="_blank"
          class='flex justify-center items-center text-gray-600 hover:text-gray-900 
          dark:text-gray-400 dark:hover:text-white hover:scale-125 transition'
        >
          {button.icon === 'GitHubIcon' && <GitHubIcon class='size-9' />}
          {button.icon === 'MediumIcon' && <MediumIcon class='size-9' />}
          {button.icon === 'YouTubeIcon' && <YouTubeIcon class='size-10' />}
          {button.icon === 'LinkedInIcon' && <LinkedInIcon class='size-8' />}
          {button.icon === 'InstagramIcon' && <InstagramIcon class='size-8' />}
      </a>
    )
  )}
</div>