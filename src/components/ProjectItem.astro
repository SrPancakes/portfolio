---
import GitHub from "./icons/GitHubIcon.astro"
import LinkButton from "./LinkButton.astro"

interface Props {
  title: string;
  description: string;
  image: string;
  link?: string;
  github?: string;
  tags: any[];
}

const { title, description, image, link, github, tags } = Astro.props
---

<article class="hover:scale-105 transition flex items-center flex-col xl:flex-row gap-x-20">
  <div class="py-10">
    <h3 class="text-2xl font-semibold text-yellow-800 dark:text-yellow-200 mb-2">
      {title}
    </h3>
    <p class="text-lg mb-4 text-pretty">
      {description}
    </p>
    <ul class="flex gap-x-2 flex-row mb-2">
      {tags.map((tag) => (
        <li>
          <span class={`flex gap-x-2 rounded-full text-xs text-[${tag.textColor}] bg-[${tag.color}] py-1 px-2`}>
            <tag.icon class='size-4' />
            {tag.name}
          </span>
        </li>
      ))}
    </ul>
    <footer class="flex gap-x-4 items-end justify-start mt-4">
      
      {link && (
        <LinkButton href={link}>
          <svg
            width="24"
            height="24"
            viewBox="0 0 24 24"
            stroke-width="1.5"
            stroke="currentColor"
            fill="none"
            stroke-linecap="round"
            stroke-linejoin="round"
          >
            <>
              <path stroke="none" d="M0 0h24v24H0z" fill="none" />
              <path d="M19.5 7a9 9 0 0 0 -7.5 -4a8.991 8.991 0 0 0 -7.484 4" />
              <path d="M11.5 3a16.989 16.989 0 0 0 -1.826 4" />
              <path d="M12.5 3a16.989 16.989 0 0 1 1.828 4" />
              <path d="M19.5 17a9 9 0 0 1 -7.5 4a8.991 8.991 0 0 1 -7.484 -4" />
              <path d="M11.5 21a16.989 16.989 0 0 1 -1.826 -4" />
              <path d="M12.5 21a16.989 16.989 0 0 0 1.828 -4" />
              <path d="M2 10l1 4l1.5 -4l1.5 4l1 -4" />
              <path d="M17 10l1 4l1.5 -4l1.5 4l1 -4" />
              <path d="M9.5 10l1 4l1.5 -4l1.5 4l1 -4" />
            </>
          </svg>
          Live Demo
        </LinkButton>
      )}
      {github && (
        <LinkButton href={github}>
          <GitHub class="size-6" />
          Source Code
        </LinkButton>
      )}
    </footer>
  </div>
  
  <img
    loading="lazy"
    class="rounded-lg shadow-2xl shadow-white/10 aspect-video xl:w-1/2"
    src={image}
    alt={`Screenshot of ${title}`}
  />
      </article>
