---
import HomeIcon from './icons/HomeIcon.astro'
import ProjectsIcon from './icons/ProjectsIcon.astro'
import PagesIcon from './icons/PagesIcon.astro'
import StackIcon from './icons/StackIcon.astro'
import ProfileIcon from './icons/ProfileIcon.astro'
import EnvelopeIcon from './icons/EnvelopeIcon.astro'
import SearchIcon from './icons/SearchIcon.astro'
---

<aside class="ml-2 flex flex-col text-gray-600 fixed h-[100vh] justify-center gap-10">
  <HomeIcon class='menu-icon size-8' />
  <ProjectsIcon class='menu-icon size-8' />
  <PagesIcon class='menu-icon size-8' />
  <StackIcon class='menu-icon size-8' />
  <ProfileIcon class='menu-icon size-8' />
  <EnvelopeIcon class='menu-icon size-8' />
  <SearchIcon class='menu-icon size-8' />
</aside>

<style>
  .menu-icon:hover {
    color: #fff; 
    cursor: pointer;
  }
</style>

