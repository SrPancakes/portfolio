---
import Layout from '../layouts/Layout.astro'

import Project from '../components/FullProject.jsx'
import Navbar from '../components/ProjectNavbar.jsx'
import SectionContainer from '../components/SectionContainer.astro'
---

<Layout
  title='Projects'
  description='A collection of projects I have worked on'
>
  <main class=' pt-32 grid grid-cols-6'>
    <SectionContainer
      class='max-w-xl ml-14 fixed max-h-[80vh] overflow-y-hidden top-32 col-span-2'
    >
      <Navbar client:load />
    </SectionContainer>
    <SectionContainer
      class='[&>h2]:fixed col-span-4 min-w-[90%] px-8 mr-10 col-start-3'
      title='Projects'
    >
      <Project client:load />
    </SectionContainer>
  </main>
</Layout>

